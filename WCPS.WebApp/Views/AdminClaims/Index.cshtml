@model IEnumerable<WCPS.WebApp.Models.ClaimRequest>

@{
    ViewData["Title"] = "Pending Claims";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Pending Claims</h2>
        <a asp-controller="AdminClaims" asp-action="Index" class="btn btn-outline-secondary">Refresh</a>
    </div>
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">There are no pending claims at the moment.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Ref</th>
                        <th>Title</th>
                        <th>Employee</th>
                        <th>Claimed</th>
                        <th>Submitted</th>
                        <th style="width:160px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td class="text-break">@c.ClaimRef</td>
                            <td>@c.Title</td>
                            <td>@(c.Employee?.FullName ?? c.EmployeeId)</td>
                            <td>₹@c.AmountClaimed.ToString("N2")</td>
                            <td>@c.CreatedAt.ToLocalTime().ToString("dd MMM yyyy, HH:mm")</td>
                            <td class="text-end">
                                <a asp-controller="AdminClaims" asp-action="Process" asp-route-id="@c.Id" class="btn btn-sm btn-primary me-1">
                                    Process
                                </a>
                                <a asp-controller="Claims" asp-action="Details" asp-route-id="@c.Id" class="btn btn-sm btn-outline-secondary">
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
    