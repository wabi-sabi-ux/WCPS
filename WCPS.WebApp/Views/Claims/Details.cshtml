@model WCPS.WebApp.Models.ClaimRequest

@{
    ViewData["Title"] = "Claim Details";
}

<h2>Claim Details</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <h6 class="card-subtitle mb-2 text-muted">Ref: @Model.ClaimRef</h6>
        <p class="card-text">@Model.Description</p>

        <p><strong>Amount Claimed:</strong> @Model.AmountClaimed.ToString("N2")</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Created:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
        <p><strong>Submitted by:</strong> @Model.Employee?.FullName ?? "N/A"</p>
    </div>
</div>

<p class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to list</a>
</p>
